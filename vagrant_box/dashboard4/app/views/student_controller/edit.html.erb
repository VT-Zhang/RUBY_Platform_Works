<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Edit Student</title>
    </head>
    <style>
        .error{
            color:red;
        }
    </style>
    <body>
        <h1>Editing <%= @student.first_name %> <%= @student.last_name %></h1>
        <form action="/dojos/<%= @dojo.id %>/students/<%= @student.id %>" method="post">
            <input type="hidden" name="_method" value="patch" />
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
            <p>First Name: <input type="text" name="first_name" value="<%= @student.first_name %>"/></p>
            <p>Last Name: <input type="text" name="last_name" value="<%= @student.last_name %>"/></p>
            <p>Email: <input type="text" name="email" value="<%= @student.email %>"/></p>
            <p>
                Dojo: <select name='dojo'>
                    <option value="<%= @dojo.id %>"><%= @dojo.branch %></option>
                    <% @dojos.each do |dojo| %>
                    <option value="<%= dojo.id %>"><%= dojo.branch %></option>
                    <% end %>
                </select>
            </p>
            <p><input type="submit" value="Update Student" /></p>
        </form>
        <p><a href="/dojos/<%= @dojo.id %>/students">Back to Students</a> | <a href="/dojos/<%= @dojo.id %>"><%= @dojo.branch %></a></p>

        <% if flash[:errors] !=nil %>
        <% flash[:errors].each do |error| %>
        <p class="error">
            <%= error %>
        </p>
        <% end %>
        <% end %>
    </body>
</html>
