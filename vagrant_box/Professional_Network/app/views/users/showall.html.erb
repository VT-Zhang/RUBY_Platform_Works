<h2>Users you may want to connect with:</h2>
<table>
    <tr>
       <th>Name</th>
       <th>Action</th>
   </tr>
    <% if @users %>
    <% @users.each do |user| %>
    <% if user != current_user%>
    <tr>
       <th><a href="/users/<%=user.id%>/show"><%=user.name%></a></th>
       <th><a href="/invitations/<%=user.id%>/create" data-method="post">Connect</a></th>
   </tr>
   <% end %>
   <% end %>
   <% end %>
</table>
