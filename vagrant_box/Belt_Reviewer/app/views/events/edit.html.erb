<div id="top">
    <a href="/events" data-method="get">Events Dashboard</a> |
    <a href="/sessions" data-method="delete">Logout</a>
</div>

<h2>Edit Your Event</h2>
<form action="/events/<%=@event.id%>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="patch" />
    <p>Name: <input type="text" name="name" value="<%=@event.name%>"/></p>
    <p>Date: <input type="date" name="date" value="<%=@event.date%>"/></p>
    <p>Location: <input type="text" name="location" value="<%=@event.location%>" />
    <select name="state" value="<%=@event.state%>">
        <option value="AZ">AZ</option>
        <option value="CA">CA</option>
        <option value="DC">DC</option>
        <option value="IL">IL</option>
        <option value="NY">NY</option>
        <option value="VA">VA</option>
    </select></p>
    <input type="submit" value="Update Event" />
</form>
