<style>
#wrapper{
    height:500px;
    width: 700px;
    border-style: 1px black;
    border-style: solid;
    display: flex;
    margin-left: auto;
    margin-right: auto;

}

#left{
    width:500px;
    margin-left: 100px;
}

#right{
    width:500px;
}

#title{
    text-align: center;
}

</style>

<h1 id="title">Welcome to the Professional Network App</h1>
<div id="wrapper">
    <div id="left">
        <h2>Register</h2>
        <form action="/users/create" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <p>Name: <input type="text" name="name" /></p>
            <p>Email: <input type="text" name="email" /></p>
            <p>Pasword: <input type="password" name="password" /></p>
            <p>*Password should be at least 8 characters.</p>
            <p>Confirm PW: <input type="password" name="password_confirmation" /></p>
            <p><textarea name="description" rows="6" cols="50">Add Your Description Here...</textarea></p>
            <input type="submit" value="Register" />
        </form>
    </div>

    <div id="right">
        <h2>Login</h2>
        <form action="/sessions/create" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <p>Email: <input type="text" name="email" /></p>
            <p>Pasword: <input type="password" name="password" /></p>
            <input type="submit" value="Login" />
        </form>
    </div>

</div>
